{% extends 'base.html.twig' %}

{% block title %}Bienvenue Sur Bidcardcoin{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue Sur Bidcardcoin</h1>

        Enchères en cours :
</div>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Heure</th>
            <th>Début</th>
            <th>Fin</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for enchere in encheres %}
            <tr>
                <td>{{ enchere.nom }}</td>
                <td>{{ enchere.heure }}</td>
                <td>{{ enchere.dateDebut ? enchere.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ enchere.dateFin ? enchere.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('enchere_show', {'id': enchere.id}) }}">show</a>
                    <a href="{{ path('enchere_lot', {'id': enchere.id}) }}">voir lots</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
